<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="stock_movement_report">

            <t t-call="report.html_container">

                <t t-call="report.external_layout">

                    <t t-foreach="docs" t-as="o">
                
                        <div class="page">

                            <style type="text/css">
                                .header,
                                .footer {
                                    display: none;
                                }
                                @media (min-width: 992px)
                                .container {
                                    width: 100%;
                                }

                                @media (min-width: 768px)
                                .container {
                                    width: 100%;
                                }
                                .container {
                                    width: 100%;
                                }
                                body {
                                    margin: 0px !important;
                                }
                                body.o_in_iframe {
                                    margin-top: 0px!important;
                                }
                                .clearfloat {
                                    clear: both;
                                    float: none;
                                    width: 100%;
                                    height: 1px;
                                    display: block;
                                }
                                .report-wrapper {
                                    width: 100%;
                                    margin: 0px auto;
                                }
                                table {
                                    width: 100%;
                                    border-spacing: 0px;
                                    border: 2px solid #CCC;
                                    margin: 0px auto;
                                }
                                table tr td, 
                                table tr th {
                                    text-align: center;
                                    padding: 3px 10px;
                                    border-right: 2px solid #CCC;
                                    border-bottom: 1px solid #eee;
                                    font-size: 12px;
                                }
                                table tr td:last-child, 
                                table tr th:last-child {
                                    border-right: none
                                }
                                table tr:last-child td {
                                    border-bottom: none
                                }
                                table tr th {
                                    text-align: center;
                                }
                                .report-header {
                                    width: 100%;
                                    margin: 0px 0px 10px;
                                    text-align: left;
                                }
                                .report-header p {
                                    width: 50%;
                                    float: left;
                                    margin: 0px 0px 20px;
                                }
                                .report-header p .solid {
                                    font-weight: bold;
                                }
                                h1,
                                h2 {
                                    text-align: center;
                                    font-size: 25px;
                                    text-decoration: underline;
                                    font-weight: normal;
                                }
                                h2 {
                                    text-align: left;
                                    margin: 15px 0px 20px 0px;
                                }
                                .tile {
                                    display: inline-block;
                                    width: 100px;
                                    text-align: center;
                                    background: #a64f8e;
                                    color: #fff;
                                    padding: 2px 5px;
                                }
                                .tables_wrapper {
                                    width: 100%;
                                    float: left;
                                }
                                .col_01,
                                .col_02 {
                                    width: 50%;
                                    float: left;
                                }
                                .summary {
                                    width: 80%;
                                    padding: 10px;
                                    margin: 0px auto;
                                }
                                .summary h2 {
                                    margin: 0px 0px 20px;
                                }
                                .summary .liquid {
                                    font-weight: bold;
                                }
                                .summary span.solid {
                                    width: 100px;
                                    display: inline-block;
                                    margin: 0px 100px 0px 0px;
                                }
                                .summary .lastnet {
                                    border-top: 1px solid #000;
                                    border-bottom: 1px solid #000;
                                    padding: 3px 0px;
                                }
                                .opning_balance {
                                    width: 80%;
                                    margin: 0px auto;
                                }
                                .opning_balance p:nth-child(2){
                                    text-align: right;
                                }
                                .opning_balance p {
                                    width: 39%;
                                    float: left;
                                    margin: 0px 0px 20px;
                                    text-align: right;
                                    font-size: 18px;
                                }
                                .mill_opens {
                                    width: 80%;
                                    margin: 0px auto;
                                }
                                .mill_opens p {
                                    width: 33%;
                                    float: left;
                                    text-align: center;
                                    text-decoration: underline;
                                }
                            </style>

                            <div class="report-wrapper">
                                
                                <div class="report-header">

                                    <h1>Stock Movement Sheet</h1>
                                    
                                    <div style="float:left; width: 100%;">
                                        <p style="float:left; width: 50%; text-align: right; padding: 0px 50px;">
                                            <span class="solid">From: </span>
                                            <span class="liquid" t-esc="form"></span>
                                        </p>

                                        <p style="float:left; width: 50%; text-align: left; padding: 0px 50px;">
                                            <span class="solid">To: </span>
                                            <span class="liquid" t-esc="to"></span>
                                        </p>
                                    </div>

                                    <div class="opning_balance">
                                        <p>
                                            <span class="solid">Party: </span>
                                            <span class="liquid" t-esc="partner_wiz.name"></span>
                                        </p>
                                        <p>
                                            <span class="solid">Mill: </span>
                                            <span class="liquid" t-esc="mill.name"></span>
                                        </p>
                                    </div>
                                    <br class="clearfloat" />

                                </div>

                                <div class="summary">

                                    <h2>Summary</h2>

                                    <p>
                                        <span class="solid">Opening: </span>
                                        <t t-set="start_opening" t-value="getopening()" />
                                        <span class="liquid" t-esc="start_opening"></span>
                                    </p>
                                    <p>
                                        <span class="solid">Net Purchase: </span>
                                        <t t-set="start_purchased" t-value="netpurchase()" />
                                        <span class="liquid" t-esc="start_purchased"></span> 
                                    </p>
                                    <p>
                                        <span class="solid">Transfers In: </span>
                                        <t t-set="start_tranfer" t-value="TranfersIn()" />
                                        <span class="liquid" t-esc="start_tranfer"></span>
                                    </p>
                                    <p>
                                        <span class="solid">Loading: </span>
                                        <t t-set="start_loading" t-value="loading()" />
                                        <span class="liquid" t-esc="start_loading"></span>
                                    </p>
                                    <p>
                                        <span class="solid">Net Balance:</span>
                                        <t t-set="net_balance" t-value="((start_opening + start_purchased)*-1) - (start_loading + start_tranfer)" />
                                        <span class="liquid lastnet" t-esc="net_balance"></span>
                                    </p>

                                </div>
                                <t t-set="open_for_loadings" t-value="(start_opening + start_purchased) - start_tranfer" />
                                    
                                <div class="tables_wrapper">
                                    <h2>Purchase</h2>
                                    <table>
                                        <tr>
                                            <th>Date</th>
                                            <th>Quantity</th>
                                        </tr>
                                        <t t-set="pur_qty" t-value="0" />
                                        <t t-foreach="purchases" t-as="purchase">
                                            <tr>
                                                <td><span t-esc="time.strftime('%d %b %Y',time.strptime(purchase.date,'%Y-%m-%d'))"></span></td>
                                                <td>
                                                    <span t-esc="purchase.qty"></span>
                                                    <t t-set="pur_qty" t-value="pur_qty + purchase.qty" />
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td><b>Total</b></td>
                                            <td><b><span t-esc="pur_qty"></span></b></td>
                                        </tr>
                                    </table>
                                </div>
                                
                                <div class="tables_wrapper">
                                    <h2>Sales</h2>
                                    <table>
                                        <tr>
                                            <th>Date</th>
                                            <th>Quantity</th>
                                        </tr>
                                        <t t-set="sale_qty" t-value="0" />
                                        <t t-foreach="sales" t-as="sale">
                                            <tr>
                                                <td><span t-esc="time.strftime('%d %b %Y',time.strptime(sale.date,'%Y-%m-%d'))"></span></td>
                                                <td><span t-esc="sale.qty"></span></td>
                                                    <t t-set="sale_qty" t-value="sale_qty + sale.qty" />
                                            </tr>
                                        </t>
                                        <tr>
                                            <td><b>Total</b></td>
                                            <td><b><span t-esc="sale_qty"></span></b></td>
                                        </tr>
                                    </table>
                                </div>
                                
                                <div class="tables_wrapper">
                                    <h2>Transfers</h2>

                                    <table>
                                        <tr>
                                            <th>Transfer Type</th>
                                            <th>Date</th>
                                            <th>Quantity</th>
                                            <th>Adda</th>
                                            <th>Memo</th>
                                        </tr>
                                        <t t-set="transfer_qty" t-value="0" />
                                        <t t-foreach="transfers" t-as="transfer">
                                            <tr>
                                                <td>
                                                    <t t-set="trans" t-value="get_transfer_type(transfer.transfer_type)" />
                                                    <span t-esc="trans"></span>
                                                </td>

                                                <td><span t-esc="time.strftime('%d %b %Y',time.strptime(transfer.date,'%Y-%m-%d'))"></span></td>
                                                
                                                <td>
                                                    
                                                    <t t-if="transfer.transfer_type == 'g2c'">
                                                        <span t-esc="transfer.qty"></span>
                                                        <t t-set="transfer_qty" t-value="transfer_qty + transfer.qty" />
                                                    </t>

                                                    <t t-if="transfer.transfer_type == 'c2g'">
                                                        <t t-set="value" t-value="-1*(transfer.qty)" />
                                                        <span t-esc="value"></span>
                                                        <t t-set="transfer_qty" t-value="transfer_qty + value" />
                                                    </t>

                                                    <t t-if="transfer.transfer_type == 'c2c'">
                                                        <t t-if="transfer.party == partner_wiz">
                                                            <t t-set="value" t-value="-1*(transfer.qty)" />
                                                            <span t-esc="value"></span>
                                                            <t t-set="transfer_qty" t-value="transfer_qty + value" />
                                                        </t>
                                                        <t t-if="transfer.to == partner_wiz">
                                                            <t t-set="value" t-value="(transfer.qty)" />
                                                            <span t-esc="value"></span>
                                                            <t t-set="transfer_qty" t-value="transfer_qty + value" />
                                                        </t>
                                                    </t>
                                                </td>
                                                <td><span t-esc="transfer.adda.name"></span></td>
                                                <td><span t-esc="transfer.memo"></span></td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td></td>
                                            <td><b>Total</b></td>
                                            <td><b><span t-esc="transfer_qty"></span></b></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </table>

                                </div>
                                    
                                <div class="tables_wrapper">
                                    <h2>Loading</h2>
                                    <t t-if="mill_loaded == True">
                                        <div class="mill_opens">

                                            <p>
                                                <span class="solid">Opening: </span>
                                                <t t-set="formal_opening" t-value="open_for_loadings" />
                                                <span class="liquid" t-esc="formal_opening"></span>
                                            </p>

                                            <p>
                                                <span class="solid">Loadings: </span>
                                                <t t-set="formal_loadings" t-value="load_current()" />
                                                <span class="liquid" t-esc="formal_loadings"></span>
                                            </p>

                                            <p>
                                                <span class="solid">Closing: </span>
                                                <t t-set="formal_closing" t-value="(formal_opening - formal_loadings)" />
                                                <span class="liquid" t-esc="formal_closing"></span>
                                            </p>

                                        </div>
                                    </t>
                                    <table>
                                        <tr>
                                            <th>Date</th>
                                            <th>Adda</th>
                                            <th>Mill Loaded</th>
                                            <th>Quantity</th>
                                            <t t-if="mill_loaded == True">
                                                <th>Declining Balance</th>
                                            </t>
                                            <th>Destination</th>
                                            <th>Vehicle No.</th>
                                            <th>Billty No.</th>
                                        </tr>
                                        <t t-set="qty" t-value="0" />
                                        <t t-set="dec_bal" t-value="formal_opening" />
                                        <t t-foreach="loadings.sorted(key=lambda x: x.date)" t-as="load">
                                            <tr>
                                                <td><span t-esc="time.strftime('%d %b %Y',time.strptime(load.date,'%Y-%m-%d'))"></span></td>
                                                <td><span t-esc="load.adda.name"></span></td>
                                                <td><span t-esc="load.mill_loaded.name"></span></td>
                                                <td>
                                                    <span t-esc="load.qty"></span>
                                                    <t t-set="qty" t-value="qty + load.qty" />
                                                    <t t-if="mill_loaded == True"> 
                                                        <t t-set="dec_bal" t-value="dec_bal - load.qty" />
                                                    </t>
                                                    <t t-if="mill_loaded == False"> 
                                                        <t t-set="dec_bal" t-value="0" />
                                                    </t>

                                                </td>

                                                <t t-if="mill_loaded == True">
                                                    <td>
                                                        <span t-esc="dec_bal"></span>
                                                    </td>
                                                </t>
                                                <td><span t-esc="load.destination"></span></td>
                                                <td><span t-esc="load.vehicle_no"></span></td>
                                                <td><span t-esc="load.billty_no"></span></td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td><b>Total</b></td>
                                            <td><b><span t-esc="qty"></span></b></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </table>

                                </div>

                            </div><!--end of report wrapper-->

                        </div><!--end of page -->

                    </t>

                </t>
                
            </t>

        </template>

    </data>

</openerp>